<!DOCTYPE html>
<html>
  <head>
    <title>Falconwood Park</title>
    <%= favicon_link_tag 'https://s3-us-west-2.amazonaws.com/falconwood/Homepage/favicon.png' %>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <!-- <script type='text/javascript' src='unitegallery/js/jquery-11.0.min.js'></script>  -->
    <!-- <script type='text/javascript' src='unitegallery/js/unitegallery.min.js'></script>   -->

    <link rel='stylesheet' href='/assets/unite-gallery.css' type='text/css' />
  
    <script type='text/javascript' src='/assets/ug-theme-tiles.js'></script>

   

    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" %>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-98724871-1', 'auto');
      ga('send', 'pageview');

    </script>
  </head>

  <body>
    <!-- if url is the root include header without nav else include header with nav -->
    <%= 
      if current_page?('/')
        render :partial => "layouts/header"
      else
        render :partial => "layouts/navigation"
      end 
    %>

    <%= yield %>

    <%= 
      unless current_page?('/')
        render :partial => "layouts/footer"
      end 
    %>

    <script type="text/javascript">

      jQuery(document).ready(function(){

        jQuery("#gallery").unitegallery({
          tiles_type:"justified"
        });

      });
      
    </script>
  </body>
</html>
